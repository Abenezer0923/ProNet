# Server
PORT=8000
# If your platform probes a fixed port, set HEALTHCHECK_PORT to match it
HEALTHCHECK_PORT=8000

# Database (Docker Compose defaults)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=profession_db
DATABASE_SSL=false
TYPEORM_LOGGING=true

# JWT / Auth
JWT_SECRET=change-me

# OAuth (Google)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# For local dev, gateway proxies auth at port 3000 and user-service listens on 8000
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback
GOOGLE_REFRESH_TOKEN=
EMAIL_USER=
EMAIL_PASSWORD=
SMTP_USER=
SMTP_PASS=

# File uploads (Cloudinary)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Real-time / meetings (Stream)
STREAM_API_KEY=
STREAM_SECRET_KEY=

# Environment
NODE_ENV=development
